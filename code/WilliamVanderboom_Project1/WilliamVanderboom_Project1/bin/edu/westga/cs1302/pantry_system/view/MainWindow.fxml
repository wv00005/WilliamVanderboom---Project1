<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="458.0" minWidth="600.0"
	prefHeight="642.0" prefWidth="651.0"
	xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="edu.westga.cs1302.pantry_system.view.MainWindow">
	<children>
		<Label layoutX="128.0" layoutY="126.0" text="Enter food name" />
		<TextField fx:id="entry" layoutX="128.0" layoutY="143.0" />
		<Label layoutX="328.0" layoutY="126.0" text="Select food type" />
		<ComboBox fx:id="foodTypes" layoutX="328.0" layoutY="143.0"
			prefWidth="150.0" promptText="Types" />
		<ListView fx:id="pantryListView" layoutX="128.0"
			layoutY="269.0" prefHeight="200.0" prefWidth="200.0" />
		<Label layoutX="128.0" layoutY="252.0" text="Pantry" />
		<Button fx:id="addButton" layoutX="524.0" layoutY="143.0"
			mnemonicParsing="false" onAction="#handleAddButtonClick" text="Add" />
		<Label layoutX="128.0" layoutY="182.0"
			text="Enter food quantity" />
		<TextField fx:id="numberEntry" layoutX="128.0"
			layoutY="199.0" />
		<Button fx:id="minusButton" layoutX="371.0" layoutY="321.0"
			mnemonicParsing="false" onAction="#minusButton" text="-" />
		<Button fx:id="enterButton" layoutX="300.0" layoutY="199.0"
			mnemonicParsing="false" onAction="#handleEntryButtonClick"
			text="Enter" />
		<Button fx:id="plusButton" layoutX="369.0" layoutY="269.0"
			mnemonicParsing="false" onAction="#plusButton" text="+" />
		<Button fx:id="removeButton" layoutX="356.0" layoutY="399.0"
			mnemonicParsing="false" onAction="#handleRemoveButton" text="Remove" />
		<Button fx:id="countButton" layoutX="478.0" layoutY="257.0"
			mnemonicParsing="false" onAction="#handleCountButton"
			text="Total Quantity of Food" />
	</children>
</AnchorPane>
